parameters:
    level: 8
    paths:
        - ./src
        - ./src/Service/ApplePayDirect
    excludes_analyse:
        - ./src/Resources/app/administration/node_modules/*
        - ./src/Resources/app/storefront/node_modules/*
        - ./src/Controller/*
        - ./src/Handler/*
        - ./src/Helper/*
        - ./src/Resources/*
        - ./src/Service/*
        - ./src/Storefront/*
        - ./src/Subscriber/*

services:
    - class: MolliePayments\PHPStan\Rules\NoManufacturerRule
      tags:
        - phpstan.rules.rule
