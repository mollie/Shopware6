<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service public="true" id="Kiener\MolliePayments\Handler\Method\PayPalPayment" class="Mollie\Shopware\Component\Payment\Method\PayPalPayment">
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Pay"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Finalize"/>
            <argument type="service" id="Mollie\Shopware\Component\Transaction\TransactionConverter"/>
            <tag name="shopware.payment.method"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="mollie.payment.method"/>
        </service>

        <service public="true" id="Kiener\MolliePayments\Handler\Method\KlarnaOnePayment" class="Mollie\Shopware\Component\Payment\Method\KlarnaPayment">
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Pay"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Finalize"/>
            <argument type="service" id="Mollie\Shopware\Component\Transaction\TransactionConverter"/>
            <tag name="shopware.payment.method"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="mollie.payment.method"/>
        </service>

        <service public="true" id="Kiener\MolliePayments\Handler\Method\CreditCardPayment" class="Mollie\Shopware\Component\Payment\Method\CardPayment">
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Pay"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\Action\Finalize"/>
            <argument type="service" id="Mollie\Shopware\Component\Transaction\TransactionConverter"/>
            <tag name="shopware.payment.method"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="mollie.payment.method"/>
        </service>


    </services>
</container>