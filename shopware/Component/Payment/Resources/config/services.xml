<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="payment_methods.xml"/>

    </imports>
    <services>
        <service id="Mollie\Shopware\Component\Payment\PayAction">
            <argument type="service" id="Kiener\MolliePayments\Facade\MolliePaymentDoPay"/>
            <argument type="service" id="Mollie\Shopware\Component\Transaction\TransactionConverter"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Transition\TransactionTransitionService"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>

        <service id="Mollie\Shopware\Component\Payment\FinalizeAction">
            <argument type="service" id="Kiener\MolliePayments\Facade\MolliePaymentFinalize"/>
            <argument type="service" id="Mollie\Shopware\Component\Transaction\TransactionConverter"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>
        <service id="Mollie\Shopware\Component\Payment\Action\Finalize">
            <argument type="service" id="Mollie\Shopware\Component\Mollie\Gateway\MollieGateway"/>
            <argument type="service" id="Mollie\Shopware\Component\Settings\SettingsService"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>

        <service id="Mollie\Shopware\Component\Payment\Action\Pay">
            <argument type="service" id="Mollie\Shopware\Component\Mollie\CreatePaymentBuilder"/>
            <argument type="service" id="Mollie\Shopware\Component\Mollie\Gateway\MollieGateway"/>
            <argument type="service" id="Mollie\Shopware\Repository\OrderTransactionRepository"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>


        <service id="Mollie\Shopware\Component\Mollie\Gateway\MollieGateway">
            <argument type="service" id="Mollie\Shopware\Component\Settings\SettingsService"/>
            <argument>%kernel.shopware_version%</argument>
            <argument type="service" id="Mollie\Shopware\Repository\OrderTransactionRepository"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>

        <service id="Mollie\Shopware\Component\Payment\Controller\PaymentController">
            <argument type="service" id="Mollie\Shopware\Component\Payment\Route\ReturnRoute"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\Route\WebhookRoute"/>
            <argument type="service" id="monolog.logger.mollie"/>
            <tag name="controller.service_arguments"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>

        </service>

        <service id="Mollie\Shopware\Component\Payment\Route\ReturnRoute" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Mollie\Gateway\MollieGateway"/>
            <argument type="service" id="monolog.logger.mollie"/>
        </service>
        <service id="Mollie\Shopware\Component\Payment\Route\WebhookRoute"/>


    </services>
</container>
