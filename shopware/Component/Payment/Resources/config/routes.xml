<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="store-api.mollie.payment.return"
           path="/store-api/mollie/payment/return/{transactionId}"
           methods="GET">
        <requirement key="transactionId">.*</requirement>
        <default key="_controller">Mollie\Shopware\Component\Payment\Route\ReturnRoute::return</default>
        <default key="_routeScope">
            <list>
                <string>store-api</string>
            </list>
        </default>
    </route>

    <route id="store-api.mollie.payment.webhook"
           path="/store-api/mollie/payment/webhook/{transactionId}"
           methods="GET">
        <requirement key="transactionId">.*</requirement>
        <default key="_controller">Mollie\Shopware\Component\Payment\Route\WebhookRoute::notify</default>
        <default key="_routeScope">
            <list>
                <string>store-api</string>
            </list>
        </default>
    </route>

    <route id="storefront.mollie.payment.return"
           path="/mollie/return/{transactionId}"
           methods="GET">
        <requirement key="transactionId">.*</requirement>
        <default key="_controller">Mollie\Shopware\Component\Payment\Controller\PaymentController::return</default>
        <default key="csrf_protected"><bool>false</bool></default>
        <default key="_routeScope"><list><string>storefront</string></list></default>
        <option key="seo">false</option>
    </route>
    <route id="storefront.mollie.payment.cancel"
           path="/mollie/cancel/{transactionId}"
           methods="GET">
        <requirement key="transactionId">.*</requirement>
        <default key="_controller">Mollie\Shopware\Component\Payment\Controller\PaymentController::cancel</default>
        <default key="csrf_protected"><bool>false</bool></default>
        <default key="_routeScope"><list><string>storefront</string></list></default>
        <option key="seo">false</option>
    </route>
    <route id="storefront.mollie.payment.webhook"
           path="/mollie/webhook/{transactionId}"
           methods="GET">
        <requirement key="transactionId">.*</requirement>
        <default key="_controller">Mollie\Shopware\Component\Payment\Controller\PaymentController::webhook</default>
        <default key="csrf_protected"><bool>false</bool></default>
        <default key="_routeScope"><list><string>storefront</string></list></default>
        <option key="seo">false</option>
    </route>
</routes>
