<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Mollie\Shopware\Component\StatusUpdate\UpdateStatusScheduledTask">
            <tag name="shopware.scheduled.task"/>
        </service>
        <service id="Mollie\Shopware\Component\StatusUpdate\UpdateStatusTaskHandler">
            <argument type="service" id="Mollie\Shopware\Component\StatusUpdate\UpdateStatusAction"/>
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="monolog.logger.mollie"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Mollie\Shopware\Component\StatusUpdate\UpdateStatusAction">
            <argument type="service" id="Mollie\Shopware\Repository\OrderTransactionRepository"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Storefront\Webhook\NotificationFacade"/>
        </service>

    </services>
</container>