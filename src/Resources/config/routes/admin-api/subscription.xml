<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">



    <route id="api.action.mollie.subscription.list" path="/api/_action/mollie/subscriptions/{customerId}" methods="GET">
        <default key="_controller">Kiener\MolliePayments\Controller\Api\Subscription\SubscriptionControllerBase::listUserMollieSubscriptions</default>
        <default key="_routeScope"><list><string>api</string></list></default>
        <default key="auth_required"><bool>true</bool></default>
        <default key="auth_enabled"><bool>true</bool></default>
    </route>

    <route id="api.action.mollie.subscription.cancel_by_customer" path="/api/_action/mollie/subscriptions/cancel/{mollieCustomerId}/{mollieSubscriptionId}/{mandateId}/{salesChannelId}" methods="GET">
        <default key="_controller">Kiener\MolliePayments\Controller\Api\Subscription\SubscriptionControllerBase::cancelByMollieId</default>
        <default key="_routeScope"><list><string>api</string></list></default>
        <default key="auth_required"><bool>true</bool></default>
        <default key="auth_enabled"><bool>true</bool></default>
    </route>

</routes>
