<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Default PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\PaymentHandler" >
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
        </service>

        <!-- Apple Pay PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\ApplePayPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>


        <!-- Bank Transfer PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\BankTransferPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>




        <!-- PayPal Express PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\PayPalExpressPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>

        <!-- PaySafeCard PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\PaySafeCardPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>


        <!-- POS Terminal PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\PosPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>



        <!-- Bancomat PaymentHandler -->
        <service id="Kiener\MolliePayments\Handler\Method\BancomatPayment" public="true">
            <argument type="service" id="Mollie\Shopware\Component\Payment\PayAction"/>
            <argument type="service" id="Mollie\Shopware\Component\Payment\FinalizeAction"/>
            <tag name="shopware.payment.method.async"/>
            <tag name="shopware.payment.method"/>
        </service>







    </services>
</container>
