<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Kiener\MolliePayments\Core\Content\SubscriptionToProduct\SubscriptionToProductDefinition">
            <tag name="shopware.entity.definition" entity="mollie_subscription_to_product" />
        </service>

        <service id="Kiener\MolliePayments\Service\Subscription\SubscriptionOptions"
                 class="Kiener\MolliePayments\Service\Subscription\SubscriptionOptions">
            <argument type="service" id="Symfony\Component\Routing\RouterInterface"/>
            <argument type="service" id="translator"/>
        </service>

        <service id="Kiener\MolliePayments\Validator\SubscriptionCartValidator"
                 class="Kiener\MolliePayments\Validator\SubscriptionCartValidator">
            <argument type="service" id="Kiener\MolliePayments\Service\ConfigService"/>

            <tag name="shopware.cart.validator"/>
        </service>

        <service id="Kiener\MolliePayments\Page\Account\Mollie\AccountSubscriptionsPageLoader">
            <argument type="service" id="mollie_subscription_to_product.repository"/>
            <argument type="service" id="Shopware\Storefront\Page\GenericPageLoader"/>
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
        </service>

        <service id="Kiener\MolliePayments\Service\Subscription\CancelSubscriptionsService"
                 class="Kiener\MolliePayments\Service\Subscription\CancelSubscriptionsService">
            <argument type="service" id="mollie_subscription_to_product.repository"/>
            <argument type="service" id="Kiener\MolliePayments\Factory\MollieApiFactory"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>
        </service>

        <!-- Subscriptions -->
        <service id="Kiener\MolliePayments\Subscriber\Subscription\CheckoutConfirmPageSubscriber"
                 class="Kiener\MolliePayments\Subscriber\Subscription\CheckoutConfirmPageSubscriber">
            <argument type="service" id="payment_method.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Kiener\MolliePayments\Subscriber\Subscription\CreateSubscriptionsSubscriber">
            <argument type="service" id="state_machine_state.repository"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="mollie_subscription_to_product.repository"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Subscription\SubscriptionOptions"/>
            <argument type="service" id="Kiener\MolliePayments\Factory\MollieApiFactory"/>
            <argument type="service" id="Mollie\Api\MollieApiClient"/>
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\LoggerService"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>