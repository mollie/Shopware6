<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>


        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <!-- Admin API Controller -->

        <service id="Kiener\MolliePayments\Controller\Api\ConfigController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <argument type="service" id="Shopware\Administration\Snippet\CachedSnippetFinder"/>
            <argument type="service" id="Kiener\MolliePayments\Service\MollieApi\ApiKeyValidator"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Api\OrderController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\OrderService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\MollieApi\Order"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Api\RefundController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\OrderService"/>
            <argument type="service" id="Kiener\MolliePayments\Components\RefundManager\RefundManager"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Refund\RefundService"/>
            <argument type="service" id="mollie_payments.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Api\ShippingController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Facade\MollieShipment"/>
            <argument type="service" id="mollie_payments.logger"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Api\SupportController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Facade\MollieSupportFacade"/>
            <argument type="service" id="mollie_payments.logger"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Api\PaymentMethodController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\PaymentMethodService"/>
            <argument type="service" id="mollie_payments.logger"/>

            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <!-- Storefront Controller -->

        <service id="Kiener\MolliePayments\Controller\Storefront\PaymentController" public="true">
            <argument type="service" id="router"/>
            <argument type="service" id="Kiener\MolliePayments\Compatibility\Gateway\CompatibilityGateway"/>
            <argument type="service" id="Kiener\MolliePayments\Factory\MollieApiFactory"/>
            <argument type="service" id="Shopware\Core\Framework\Event\BusinessEventDispatcher"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Order\OrderStateService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\TransactionService"/>
            <argument type="service" id="mollie_payments.logger"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Transition\TransactionTransitionService"/>
            <argument type="service" id="Kiener\MolliePayments\Facade\MollieOrderPaymentFlow"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Storefront\WebhookController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <argument type="service" id="Kiener\MolliePayments\Facade\Notifications\NotificationFacade"/>
            <argument type="service" id="mollie_payments.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Storefront\ComponentsController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Storefront\IDealIssuerController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Kiener\MolliePayments\Controller\Storefront\ApplePayDirectController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\IsEnabledRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\PaymentIdRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\AddProductRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\CreateSessionRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\ShippingMethodRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Service\ApplePayDirect\ApplePayDirect"/>
            <argument type="service" id="Kiener\MolliePayments\Service\CartService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\CustomerService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\ShopService"/>
            <argument type="service" id="Kiener\MolliePayments\Service\OrderService"/>
            <argument type="service" id="Kiener\MolliePayments\Handler\Method\ApplePayPayment"/>
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="router"/>
            <argument type="service" id="Kiener\MolliePayments\Service\SettingsService"/>
            <argument type="service" id="Kiener\MolliePayments\Facade\MolliePaymentDoPay"/>
            <argument type="service" id="Kiener\MolliePayments\Factory\MollieApiFactory"/>
            <argument type="service" id="mollie_payments.logger"/>
            <argument type="service" id="Kiener\MolliePayments\Service\Cart\CartBackupService"/>
            <argument type="service" id="Kiener\MolliePayments\Repository\Order\OrderAddressRepository"/>
            <argument type="service" id="Kiener\MolliePayments\Compatibility\Gateway\CompatibilityGateway"/>
            <argument type="service" id="session.flash_bag"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
        <!-- Store API Controller -->

        <service id="Kiener\MolliePayments\Controller\StoreApi\ApplePayDirectController" public="true">
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\IsEnabledRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\PaymentIdRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\AddProductRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\CreateSessionRoute"/>
            <argument type="service" id="Kiener\MolliePayments\Controller\Routes\ApplePayDirect\ShippingMethodRoute"/>
            <argument type="service" id="mollie_payments.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>
</container>
